                                    container: '#myLandbot',
                                    configUrl: 'https://landbot.site/v3/H-1328172-BUMMXAPZ69HXA7PB/index.json',
                                });
                        </script></div>

                    </div>

                    
                    <script src="email.js"></script>
                    <script src="https://smtpjs.com/v3/smtp.js"></script>

